{
  "name": "password-manager",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "description": "A password manager built with React and Electron",
  "author": "https://github.com/Pabl1k",
  "build": {
    "appId": "com.Pabl1k.desktop-password-manager",
    "productName": "Password Manager",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist-electron/**/*",
      "dist-react/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "extraResources": [
      {
        "from": "assets/icons",
        "to": "icons"
      }
    ],
    "win": {
      "icon": "icons/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "icons/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "icons/icon.png",
      "target": "AppImage"
    }
  },
  "scripts": {
    "start": "npm-run-all --parallel dev:vite dev:electron",
    "dev:vite": "vite",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project electron/tsconfig.json",
    "dist": "npm run transpile:electron && npm run build && electron-builder",
    "dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64",
    "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
    "format": "prettier --write ."
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@tailwindcss/vite": "^4.0.8",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "prettier": "^3.5.2",
    "sass-embedded": "^1.85.0",
    "tailwindcss": "^4.0.8",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0"
  }
}
