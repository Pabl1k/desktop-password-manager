    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "bundler",
    "outDir": "../dist-electron",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "files": [],
  "references": [
