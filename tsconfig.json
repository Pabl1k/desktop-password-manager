{
  "compilerOptions": {
    // General
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    // Paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Build
    "noEmit": true,
    "isolatedModules": true,

    // Linting / Quality
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["dist-react", "dist-electron", "electron", "node_modules"]
}
